<resources>


    <!--style for Card.Setting  **************************************************************************************    -->

    <style name="Card.Setting" parent="Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">0dp</item>
    </style>


    <!--style for Card.Book   **************************************************************************************    -->

    <style name="Card.Book" parent="Widget">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">3dp</item>
    </style>

    <style name="Card.Book.Picture" parent="Widget">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:adjustViewBounds">true</item>

    </style>

    <style name="Card.Book.Title" parent="Widget">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>

        <item name="android:layout_marginTop">25dp</item>

        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.Book.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="Card.Book.BorrowButton" parent="Widget">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>


    <!--style for Card.Course   **************************************************************************************    -->

    <style name="Card.Course" parent="Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@color/blue_trans</item>
    </style>

    <style name="Card.Course.Picture" parent="Widget">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:adjustViewBounds">true</item>

    </style>

    <style name="Card.Course.Title" parent="Widget">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>

        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.Course.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--    style for Card.Home     **************************************************************************************    -->

    <style name="Card.Home" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="Card.Home.Title" parent="Widget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.Home.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>



    <!--    style for Card.SearchBook     **************************************************************************************    -->

    <style name="Card.SearchBook" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="Card.SearchBook.Title" parent="Widget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.SearchBook.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
