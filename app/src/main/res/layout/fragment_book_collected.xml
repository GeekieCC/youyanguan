<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gusteauscuter.youyanguan.activity.BookCollectionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/emptyInformation"
            android:visibility="gone"
            android:padding="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/not_collect_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView android:id="@+id/bookListView"
            style="@style/Widget.SampleDashboard.Grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center" />


</RelativeLayout>

