<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gusteauscuter.youyanguan.DepActivity.SearchBookResultActivity">

    <ImageView
        android:id="@+id/search_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_search"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/focusParentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/bg_search_blank" >

            <ImageView
                android:id="@+id/go_back_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:tint="@color/gray_dark"
                android:src="@drawable/ic_arrow_back_white_36dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/searchBookEditText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="请输入要查找的图书"
                android:inputType="textFilter"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray_dark"
                android:layout_margin="5dp"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/searchBookButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:tint="@color/gray_dark"
                android:src="@drawable/ic_enter"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalNumberLayout"
            android:layout_below="@id/id_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray_light"
            android:textColor="@color/gray"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/textDefault"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量：" />

            <TextView
                style="@style/textDefault"
                android:id="@+id/totalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <RelativeLayout
                android:id="@+id/searchConditionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:orientation="horizontal">

                <CheckBox
                    style="@style/textDefault"
                    android:layout_alignParentRight="true"
                    android:id="@+id/borrowConditionCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在馆状态"
                    android:checked="true"/>

                <Spinner
                    style="@style/textDefault"
                    android:layout_toLeftOf="@id/borrowConditionCheckBox"
                    android:id="@+id/spinner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout  android:id="@+id/search_description"
            android:layout_below="@id/totalNumberLayout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="搜索结果说明：勾选高级，可查看可借状态"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_s_n"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="南北校均可借  "/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_not_s_n"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="南北校均不可借  "/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_south"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="南校在馆可借  "/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_north"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北校在馆可借  "/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_not_known"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快速搜索，在馆状态不可知"/>
            </LinearLayout>

        </LinearLayout>

        <com.gusteauscuter.youyanguan.view.ScrollListView
            android:layout_below="@id/search_description"
            android:id="@+id/bookListView"
            style="@style/Widget.SampleDashboard.Grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay" >
        </com.gusteauscuter.youyanguan.view.ScrollListView>

    </LinearLayout>

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRefreshBookSearched"
        android:layout_gravity="center" />

</FrameLayout>
