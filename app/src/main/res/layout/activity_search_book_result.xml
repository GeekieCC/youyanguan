<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gusteauscuter.youyanguan.DepActivity.SearchBookResultActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ActionbarTheme" />

    <SearchView
        android:visibility="visible"
        android:id="@+id/searchBookEditText"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:iconifiedByDefault="true"
        android:searchHintIcon="@drawable/ic_search_book"
        android:textColor="@color/white"
        android:inputType="textFilter"
        android:queryHint="请输入要查找的图书"
        android:layout_marginLeft="60dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/totalNumberLayout"
        android:layout_below="@id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_light"
        android:textColor="@color/gray"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：" />

        <TextView android:id="@+id/totalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <RelativeLayout
            android:id="@+id/searchConditionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:orientation="horizontal">

            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@+id/NorthCheckBox"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="查看" />
            <CheckBox
                android:layout_toLeftOf="@+id/NorthCheckBox"
                android:id="@+id/SouthCheckBox"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="查看"/>
            <Spinner
                android:layout_toLeftOf="@+id/SouthCheckBox"
                android:id="@+id/spinner"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

    <com.gusteauscuter.youyanguan.view.ScrollListView
        android:layout_below="@id/totalNumberLayout"
        android:id="@+id/bookListView"
        style="@style/Widget.SampleDashboard.Grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay" >
    </com.gusteauscuter.youyanguan.view.ScrollListView>

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRefreshBookSearched"
        android:layout_gravity="center" />


</RelativeLayout>
