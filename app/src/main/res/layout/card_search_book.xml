<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- The CardView needs to be wrapped to ensure spacing is applied correctly. -->

    <android.support.v7.widget.CardView
        style="@style/Card.SearchBook"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/Card.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/searchBook_Title"
                style="@style/Card.SearchBook.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                style="@style/Card.Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center|left">
                    <ImageView
                        android:id="@+id/searchBookStateNorth"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/search_book_sample" />
                    <ImageView
                        android:id="@+id/searchBookStateSouth"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/search_book_sample" />
                </LinearLayout>


                <LinearLayout
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:id="@+id/searchBook_Publisher"
                        style="@style/Card.SearchBook.Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="book" />
                    <TextView
                        android:id="@+id/searchBook_Pubdate"
                        style="@style/Card.SearchBook.Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="book" />
                    <TextView
                        android:id="@+id/searchBook_BookId"
                        style="@style/Card.SearchBook.Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                    <TextView
                        android:id="@+id/searchBook_Author"
                        style="@style/Card.SearchBook.Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/collect_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:text="点击收藏"/>

    </android.support.v7.widget.CardView>



</FrameLayout>
