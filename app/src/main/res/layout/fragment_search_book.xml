<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gusteauscuter.youyanguan.content_fragment.bookFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef999999"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/focusParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="0dp"
        android:background="@color/blue_trans_2" >

        <TextView
            android:id="@+id/searchBook"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="请输入要查找的图书"
            android:textSize="23sp"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/searchBookScan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:background="@color/red"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>


