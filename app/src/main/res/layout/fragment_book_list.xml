<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gusteauscuter.youyanguan.content_fragment.bookBorrowedFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/emptyInformation"
            android:padding="@dimen/margin_large"
            android:text="You didn't borrow any books."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridView android:id="@+id/bookListView"
            android:numColumns="3"
            android:divider="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </GridView>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRefresh"
        android:visibility="gone"
        android:layout_gravity="center" />

</FrameLayout>
